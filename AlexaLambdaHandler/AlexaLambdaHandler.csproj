<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Title>Alexa Lambda Handler</Title>
    <Description>A helper class for routing Alexa Skill requests hosted on AWS Lambda.</Description>
    <PackageId>AlexaLambdaHandler</PackageId>
    <Authors>adrian</Authors>
    <PackageTags>alexa;aws;lambda</PackageTags>
    <IncludeSymbols>True</IncludeSymbols>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>0.0.0</Version>
    <PackageProjectUrl>https://github.com/adriangodong/alexa-lambda-handler</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/adriangodong/alexa-lambda-handler/blob/master/LICENSE</PackageLicenseUrl>
  </PropertyGroup>
  
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <NetStandardImplicitPackageVersion>1.6.0</NetStandardImplicitPackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Alexa.NET" Version="1.7.0" />
    <PackageReference Include="Amazon.Lambda.Core" Version="1.1.0" />
  </ItemGroup>

</Project>